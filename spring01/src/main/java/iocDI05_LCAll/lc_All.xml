<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

<!-- ** Test All
	=> LifeCycleTest bean 설정,  
	=> @ Annotation Scan base-package 등록 (@PostConstruct, @PreDestroy 안됨) 
-->
	<bean class="iocDI05_LCAll.LifeCycleTest" id="lc" lazy-init="true" 
			init-method="begin" destroy-method="end"/>
		
	<context:component-scan base-package="iocDI05_LCAll" />	

</beans>
